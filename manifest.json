{
   "manifest_version": 3,
   "name": "간단 메모장",
   "version": "1.0.0",
   "description": "간단하고 빠른 메모 작성 도구",
   "permissions": ["storage", "contextMenus", "notifications"],
   "action": {
      "default_popup": "popup.html",
      "default_title": "간단 메모장"
   },
   "background": {
      "service_worker": "background.js"
   },
   "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
   }
}
